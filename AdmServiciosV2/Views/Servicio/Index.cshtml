@model IEnumerable<AdmServiciosV2.Models.ServicioCLS>

@{
    ViewBag.Title = "Servicios";
    ViewBag.TituloChart = "Lista Servicios";
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="tabla-casos" class="table" style="width:100%;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdServicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdTipoServicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CostoBase)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IdServicio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IdTipoServicio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CostoBase)
        </td>
        <td>
            @Html.ActionLink("Ver", "DetailServicio", "Servicio", new { id = item.IdServicio }, new { @class = "button b-green" })
        </td>
    </tr>
}

</table>
